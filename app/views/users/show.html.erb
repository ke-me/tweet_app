<p><%= @user.name %></p>
<p><%= @user.email %></p>
<img src="/user_images/<%= @user.image_name %>" width="80" />
<% if logged_in? && @user == current_user %>
<div><%= link_to "編集", edit_user_path %></div>
<div><%= link_to "削除", user_path(@user), data: { turbo_method: :delete } %></div>
<% end %>
<p>投稿一覧</p>
<div class="post-list">
    <% @user.posts.each do |post| %>
        <div class="post-item">
            <%= link_to post do %>
                <p><%= safe_join(post.content.split("\n"),tag(:br)) %>（<%= post.user.name %>）</p>
            <% end %>
        </div>
    <% end %>
</div>
<p>いいね一覧</p>
<div class="like-list">
    <% if @like_posts.present? %>
        <% @like_posts.each do |post| %>
            <div class="like-item">
                <%= link_to post_path(post) do %>
                    <p><%= safe_join(post.content.split("\n"),tag(:br)) %>（<%= post.user.name %>）</p>
                <% end %>
            </div>
        <% end %>
    <% else %>
    <p>いいねした投稿はありません。</p>
    <% end %>
</div>
